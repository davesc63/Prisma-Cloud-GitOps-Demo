
resource "aws_security_group" "node_group_mgmt_one" {
  name_prefix = "node_group_mgmt_one"
  vpc_id      = module.vpc.vpc_id

  ingress {
    from_port = 22
    to_port   = 22
    protocol  = "tcp"

    cidr_blocks = [
      "10.0.0.0/8",
    ]
  }
}

resource "aws_security_group" "node_group_mgmt_two" {
  name_prefix = "node_group_mgmt_two"
  vpc_id      = module.vpc.vpc_id

